html,
body {
  padding: 0;
  margin: 0;
  height: 100%;
}

ul{
  list-style: none
  margin:0
  padding: 0
}

.icon {
  width: 1.5rem;
  height: 1.5rem;
  vertical-align: sub;
}

.icon-small {
  width: 1rem;
  height: 1rem;
  vertical-align: middle;
}

.icon,
.icon-small {
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: 0 0;
  display: inline-block;
}

.color-main {
  color: $mainColor!important
}

.color-red {
  color: #f00
}

.color-grey {
  color: #999!important
}

.color-orange{
  color: #f9c716
}

.color-white{
  color:#fff
}

.bg-main {
  background: $mainColor;
}

.bg-red {
  background: #f00
}

.bg-grey {
  background: #999
}

.bg-orange {
  background: #f9c716
}

.bg-white{
  background: #fff
}

.text-center{
  text-align: center
}

.left{
  float: left
}

.right{
  float: right
}

.ellipsis{
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap
}

.line-through{
  text-decoration: line-through
}

.list
    li
        text-align:left
        font-size:.7rem
        padding:.5rem 0
        white-space:nowrap
        overflow:hidden
        text-overflow:ellipsis
        &:nth-of-type(2n)
            background-color:#fff
        &:nth-of-type(2n+1)
            background-color:#eff3f6

.table
    width:100%
    border-collapse: collapse
    border-spacing: 0
    tr
        &:nth-of-type(2n)
              background-color:#fff
        &:nth-of-type(2n+1)
            background-color:#eff3f6
        td
          text-align: center
          border:1px solid #eff3f6
          font-size:.7rem
          padding:.3rem 0
        