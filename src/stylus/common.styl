html,
body {
  padding: 0;
  margin: 0;
  height: 100%;
}

ul{
  list-style: none
  margin:0
  padding: 0
}

.icon {
  width: 1.5rem;
  height: 1.5rem;
  vertical-align: sub;
}

.icon-small {
  width: 1rem;
  height: 1rem;
  vertical-align: middle;
}

.icon,
.icon-small {
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: 0 0;
  display: inline-block;
}

.color-main {
  color: $mainColor!important
}

.color-red {
  color: #f00
}

.color-grey {
  color: #999!important
}

.color-orange{
  color: #f9c716
}

.bg-main {
  background: $mainColor;
}

.text-center{
  text-align: center
}

.left{
  float: left
}

.right{
  float: right
}